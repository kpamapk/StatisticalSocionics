---
// Import types
import { getEntry, render } from "astro:content";
import Layout from "@/layouts/Layout.astro";

// Get the slug param
const { slug } = Astro.params;

// Do not assert type here
const entry = await getEntry("dichotomies", slug);

// Handle 404
if (!entry) {
  throw new Error(`Entry not found: ${slug}`);
}

// Safe to access after null check
const { Content } = await render(entry);
const { title, description } = entry.data;
---

<Layout title={title} description={description}>
  <article class="prose mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4">{title}</h1>
    <p class="text-lg mb-6">{description}</p>
    <Content />
  </article>
</Layout>
